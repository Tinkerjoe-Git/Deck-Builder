<%= form_with(model: @deck) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%= f.label :creator %>
  <%= f.text_field :creator %><br>

  <%= f.label :mainboard %>
  <%= f.text_field :mainboard %><br>

  <%= f.label :sideboard %>
  <%= f.text_field :sideboard %><br>

  <% Card.all.each do |card| %>
    <%= f.check_box :card_ids, { multiple: true }, card.id, nil %>
    <%= card.name %>
  <% end %>

  <%= f.submit button_name %>
<% end %>